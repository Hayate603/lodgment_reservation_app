<h1>予約一覧</h1>

<table>
  <thead>
    <tr>
      <th>部屋名</th>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>人数</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.room.name %></td>
        <td><%= reservation.check_in %></td>
        <td><%= reservation.check_out %></td>
        <td><%= reservation.number_of_people %></td>
        <td>
        <%= link_to '削除', room_reservation_path(reservation.room, reservation), method: :delete, data: { confirm: '予約を削除してよろしいですか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

