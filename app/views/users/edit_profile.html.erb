<h2>プロフィール</h2>
<%= form_with model: @user, url: users_profile_path, method: :patch, local: true, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br/>
    <%= f.text_area :introduction %>
  </div>

  <div class="field">
    <%= f.label :profile_image %><br/>
    <%= f.file_field :profile_image %>
  </div>

  <div class="actions">
    <%= f.submit "保存" %>
  </div>
<% end %>
