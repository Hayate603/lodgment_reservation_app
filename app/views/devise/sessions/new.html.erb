
<div class="login-container">
  <h2 class="login-title">ログイン</h2>

  <%= form_with model: @user, url: user_session_path, local: true, html: { class: "login-form" } do |f| %>

    <div class="field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember-me-checkbox">
        <%= f.check_box :remember_me, id: "remember_me_checkbox", class: "form-checkbox" %>
        <label for="remember_me_checkbox" class="checkbox-label">ログイン状態を保持する</label>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "form-submit" %>
    </div>
  <% end %>

  <%= link_to '新しいアカウントを作成', new_registration_path(resource_name), class: 'login-btn' %>
</div>
