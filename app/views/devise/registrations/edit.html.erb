<div class="container">
  <h2 class="account-title">アカウント情報の編集</h2>
  <%= form_with(model: resource, url: registration_path(resource_name), method: :put, local: true) do |f| %>
    <div class="field">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :password, "新しいパスワード (変更する場合)", class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "新しいパスワードの確認", class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-input" %>
    </div>

    <div class="field">
      <%= f.label :current_password, "現在のパスワード (必須)", class: "form-label" %><br />
      <%= f.password_field :current_password, autocomplete: "off", class: "form-input" %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "action-link" %>
      <%= link_to 'キャンセル', users_account_path, class: "action-link" %>
    </div>
  <% end %>
</div>



